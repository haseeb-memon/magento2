<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <cloudinary>
            <transformations>
                <cloudinary_fetch_format>1</cloudinary_fetch_format>
                <cloudinary_image_quality>auto</cloudinary_image_quality>
                <cloudinary_image_dpr>1.0</cloudinary_image_dpr>
            </transformations>
            <configuration>
                <cloudinary_cdn_subdomain>1</cloudinary_cdn_subdomain>
            </configuration>
            <advanced>
                <remove_version_number>0</remove_version_number>
                <use_root_path>0</use_root_path>
            </advanced>
        </cloudinary>
    </default>
</config>
